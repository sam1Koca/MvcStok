@using MvcStok.Models.Entity
@model List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    // Bu sayfa Ürün listelemek için.
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN İD</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKASI</th>
        <th>ÜRÜN KATEGORİSİ</th>
        <th>FİYAT</th>
        <th>STOK ADEDİ</th>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.URUNID</th>
                <td>@urun.URUNAD</td>
                <td>@urun.MARKA</td>
                <td>@urun.URUNKATEGORI</td>
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>

            </tr>
        }
    </tbody>
</table>

